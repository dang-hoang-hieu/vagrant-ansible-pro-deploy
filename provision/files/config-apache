<Directory /home/app>
  Options FollowSymLinks
  Require all granted
</Directory>

<IfModule mod_proxy.c>
  <Proxy *>
    Require all granted
  </Proxy>
  ProxyPreserveHost On
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault A0
  <LocationMatch "\.(ico|flv|jpe?g|png|gif|js|css|swf|htc|ttf)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 hour"
  </LocationMatch>
</IfModule>

LoadModule passenger_module /home/vagrant/.rbenv/versions/2.2.4/lib/ruby/gems/2.2.0/gems/passenger-5.0.28/buildout/apache2/mod_passenger.so
<IfModule mod_passenger.c>
  PassengerRoot /home/vagrant/.rbenv/versions/2.2.4/lib/ruby/gems/2.2.0/gems/passenger-5.0.28
  PassengerDefaultRuby /home/vagrant/.rbenv/versions/2.2.4/bin/ruby

  PassengerEnabled on
  PassengerDefaultUser vagrant

  PassengerLogLevel 0
  PassengerDebugLogFile /var/log/apache2/passenger.log

  PassengerMaxPoolSize 10
  PassengerMaxRequests 5000
  PassengerMaxPreloaderIdleTime 0
  PassengerPoolIdleTime 600
  PassengerMinInstances 1
  PassengerMaxInstancesPerApp 3

  PassengerHighPerformance off
</IfModule>

<ifmodule mod_deflate.c>
  AddOutputFilterByType DEFLATE font/opentype font/truetype font/eot
</ifmodule>
